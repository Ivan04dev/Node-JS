En app.js

// ConexiÃ³n a la base de datos de Oracle 
connectToDatabase()
    .then(connection => {
        console.log('Base de datos conectada exitosamente');
    })
    .catch(error => {
        console.log('No se pudo conectar a la base de datos', error);
    })
